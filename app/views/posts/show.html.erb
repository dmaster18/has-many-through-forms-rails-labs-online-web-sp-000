<h1> <%= @post.title %> </h1>


<p> <%= @post.content %> </p>


Categories: <br>
<ul>
  <% @post.categories.each do |category| %>
    <li> <%= category.name %> </li>
  <% end %>
</ul>



Comments: <br>
<ul>
  <% @post.comments.each do |comment| %>
    <li> <%= comment.comment_content %></li>
  <% end %>
</ul>

Users: <br>
<ul>
  <% @post.users.each do |user| %>
    <li> <%=link_to user.username, user_path(user.id) %></li>
  <% end %>
</ul>

New Comments: <br>
<%= form_for(@post) do |f| %>
  <%= f.fields_for :comments, Comment.new do |comment_builder| %>
    <%= comment_builder.text_field :comment_content %>
    <%#= comment_builder.collection_check_boxes(:user_ids, User.all, :id, :username) %>
  <% end %>
  <%= f.submit 'Create Comment'%>
<% end %>
